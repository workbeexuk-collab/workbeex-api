# Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy prisma schema for generate
COPY prisma ./prisma/
RUN npx prisma generate

# Copy source (will be overridden by volume mount)
COPY . .

EXPOSE 3000
EXPOSE 9229

CMD ["npm", "run", "start:dev"]
