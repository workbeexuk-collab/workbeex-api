# ===========================================
# NextBee Backend Environment Configuration
# ===========================================

# App
NODE_ENV=production
PORT=3000
API_URL=https://api.nextbee.com
FRONTEND_URL=https://nextbee.com

# Database
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@postgres:5432/nextbee

# Redis
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# JWT Authentication
JWT_ACCESS_SECRET=your_jwt_access_secret_min_32_characters_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_characters_long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PLATFORM_FEE_PERCENT=15

# MinIO / S3 Storage
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
S3_ENDPOINT=http://minio:9000
S3_BUCKET=nextbee
S3_REGION=eu-west-1
S3_PUBLIC_URL=https://files.nextbee.com

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=xxx
GOOGLE_CLIENT_SECRET=xxx
FACEBOOK_APP_ID=xxx
FACEBOOK_APP_SECRET=xxx

# Email (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@nextbee.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
