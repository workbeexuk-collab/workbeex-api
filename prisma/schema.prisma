generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USER & AUTH ====================

model User {
  id                 String     @id @default(cuid())
  email              String     @unique
  passwordHash       String?
  firstName          String
  lastName           String
  phone              String?
  postcode           String?    // UK postcode for location matching
  avatar             String?
  type               UserType   @default(CUSTOMER)
  status             UserStatus @default(ACTIVE)
  emailVerified      Boolean    @default(false)
  emailVerifiedAt    DateTime?
  phoneVerified      Boolean    @default(false)
  phoneVerifiedAt    DateTime?
  phoneIsVoip        Boolean?   // True if phone is VOIP (less trusted)
  addressVerified    Boolean    @default(false)
  addressVerifiedAt  DateTime?
  socialTrustScore   Int        @default(0)  // 0-100 based on social accounts
  overallTrustScore  Int        @default(0)  // 0-100 combined trust score
  preferredLanguage  String     @default("en")
  timezone           String     @default("UTC")
  registrationStep   Int        @default(1)  // Track onboarding progress
  onboardingComplete Boolean    @default(false)
  balance            Decimal    @default(0) @db.Decimal(10, 2)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  // Relations
  provider                  Provider?
  balanceTransactions       BalanceTransaction[]
  socialAccounts            SocialAccount[]
  refreshTokens             RefreshToken[]
  passwordResets            PasswordReset[]
  sentMessages              Message[]                   @relation("sender")
  conversations             ConversationParticipant[]
  notifications             Notification[]
  reviewsWritten            Review[]                    @relation("author")
  reviewsReceived           Review[]                    @relation("reviewed")
  bookingsAsCustomer        Booking[]                   @relation("customer")
  quoteRequests             QuoteRequest[]
  helpfulVotes              ReviewHelpful[]
  deviceTokens              DeviceToken[]
  favorites                 Favorite[]
  employerJobs              Job[]                       @relation("EmployerJobs")
  candidateProfile          CandidateProfile?

  @@index([email])
  @@index([type])
  @@index([status])
}

enum UserType {
  CUSTOMER
  PROVIDER
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

model SocialAccount {
  id              String         @id @default(cuid())
  userId          String
  provider        SocialProvider
  providerId      String
  email           String?        // Email from social provider
  name            String?        // Name from social provider
  picture         String?        // Profile picture URL
  accessToken     String?
  refreshToken    String?
  expiresAt       DateTime?
  // Trust scoring metadata
  accountCreatedAt DateTime?     // When social account was created
  isVerified       Boolean?      // If provider verified the account
  followersCount   Int?          // For LinkedIn
  connectionsCount Int?          // For LinkedIn
  trustScore       Int           @default(0) // 0-100 trust score for this account
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@index([userId])
}

enum SocialProvider {
  GOOGLE
  FACEBOOK
  APPLE
  LINKEDIN
}

// Phone verification codes
model PhoneVerification {
  id        String   @id @default(cuid())
  phone     String
  code      String
  attempts  Int      @default(0)
  verified  Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([phone])
  @@index([expiresAt])
}

// Email verification codes
model EmailVerification {
  id        String   @id @default(cuid())
  email     String
  code      String
  attempts  Int      @default(0)
  verified  Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}

// Address verification via postal mail
model AddressVerification {
  id           String                    @id @default(cuid())
  userId       String
  postcode     String
  addressLine1 String
  addressLine2 String?
  city         String
  code         String                    // Code sent via mail
  status       AddressVerificationStatus @default(PENDING)
  sentAt       DateTime?
  verifiedAt   DateTime?
  expiresAt    DateTime
  createdAt    DateTime                  @default(now())

  @@index([userId])
  @@index([code])
}

enum AddressVerificationStatus {
  PENDING    // Not yet sent
  SENT       // Mail sent
  VERIFIED   // Code entered correctly
  EXPIRED    // Code expired
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  userAgent String?
  ipAddress String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model PasswordReset {
  id        String    @id @default(cuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
}

model DeviceToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  platform  String   // ios, android, web
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ==================== PROVIDER ====================

model Provider {
  id              String    @id @default(cuid())
  userId          String    @unique
  bio             String?   @db.Text
  hourlyRate      Decimal?  @db.Decimal(10, 2)
  responseTime    Int       @default(24) // hours
  location        String?
  latitude        Decimal?  @db.Decimal(10, 8)
  longitude       Decimal?  @db.Decimal(11, 8)
  serviceRadius   Int?      // km
  verified        Boolean   @default(false)
  verifiedAt      DateTime?
  rating          Decimal   @default(0) @db.Decimal(3, 2)
  reviewCount     Int       @default(0)
  completedJobs   Int       @default(0)
  trustScore      Int       @default(0) // 0-100
  isOnline        Boolean   @default(false)
  lastActiveAt    DateTime?
  stripeAccountId String?
  stripeOnboarded Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user               User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  services           ProviderService[]
  portfolio          PortfolioItem[]
  availability       ProviderAvailability[]
  certifications     ProviderCertification[]
  verificationDocs   VerificationDocument[]
  quoteRequests      QuoteRequest[]
  quotes             Quote[]
  bookingsAsProvider Booking[]               @relation("provider")
  favoritedBy        Favorite[]

  @@index([verified])
  @@index([rating])
  @@index([location])
}

model ProviderService {
  id         String    @id @default(cuid())
  providerId String
  serviceId  String
  price      Decimal?  @db.Decimal(10, 2)
  priceType  PriceType @default(HOURLY)
  createdAt  DateTime  @default(now())

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([providerId, serviceId])
  @@index([serviceId])
}

enum PriceType {
  HOURLY
  FIXED
  QUOTE_BASED
}

model ProviderAvailability {
  id          String   @id @default(cuid())
  providerId  String
  dayOfWeek   Int      // 0-6 (Sunday-Saturday)
  startTime   String   // HH:mm format
  endTime     String   // HH:mm format
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([providerId, dayOfWeek])
}

model ProviderCertification {
  id          String    @id @default(cuid())
  providerId  String
  name        String
  issuingBody String
  issueDate   DateTime?
  expiryDate  DateTime?
  documentUrl String?
  verified    Boolean   @default(false)
  createdAt   DateTime  @default(now())

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([providerId])
}

model VerificationDocument {
  id          String             @id @default(cuid())
  providerId  String
  type        VerificationType
  documentUrl String
  status      VerificationStatus @default(PENDING)
  reviewedAt  DateTime?
  reviewNotes String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([providerId])
  @@index([status])
}

enum VerificationType {
  ID_DOCUMENT
  PROOF_OF_ADDRESS
  PROFESSIONAL_LICENSE
  INSURANCE
  BACKGROUND_CHECK
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

model PortfolioItem {
  id          String   @id @default(cuid())
  providerId  String
  title       String
  description String?  @db.Text
  imageUrl    String
  serviceId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  service  Service? @relation(fields: [serviceId], references: [id])

  @@index([providerId])
}

// ==================== SERVICES ====================

model Service {
  id        String   @id @default(cuid())
  key       String   @unique // used for i18n
  slug      String   @unique
  icon      String
  image     String?
  popular   Boolean  @default(false)
  active    Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  providers     ProviderService[]
  quoteRequests QuoteRequest[]
  bookings      Booking[]
  portfolio     PortfolioItem[]
  translations  ServiceTranslation[]

  @@index([slug])
  @@index([popular])
}

model ServiceTranslation {
  id          String  @id @default(cuid())
  serviceId   String
  language    String  // en, tr, pl, ro
  name        String
  description String? @db.Text

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([serviceId, language])
}

// ==================== QUOTES & BOOKINGS ====================

model QuoteRequest {
  id            String             @id @default(cuid())
  customerId    String
  providerId    String             // Target provider for the quote request
  serviceId     String
  description   String             @db.Text
  location      String?
  latitude      Decimal?           @db.Decimal(10, 8)
  longitude     Decimal?           @db.Decimal(11, 8)
  preferredDate DateTime?
  budget        Decimal?           @db.Decimal(10, 2)
  status        QuoteRequestStatus @default(OPEN)
  images        String[]           // Array of image URLs
  expiresAt     DateTime
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  customer User     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [serviceId], references: [id])
  quotes   Quote[]

  @@index([customerId])
  @@index([providerId])
  @@index([serviceId])
  @@index([status])
}

enum QuoteRequestStatus {
  OPEN
  QUOTED
  ACCEPTED
  EXPIRED
  CANCELLED
}

model Quote {
  id             String      @id @default(cuid())
  quoteRequestId String
  providerId     String
  amount         Decimal     @db.Decimal(10, 2)
  message        String      @db.Text
  estimatedHours Int?
  validUntil     DateTime
  status         QuoteStatus @default(PENDING)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  quoteRequest QuoteRequest @relation(fields: [quoteRequestId], references: [id], onDelete: Cascade)
  provider     Provider     @relation(fields: [providerId], references: [id], onDelete: Cascade)
  booking      Booking?

  @@unique([quoteRequestId, providerId])
  @@index([providerId])
  @@index([status])
}

enum QuoteStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
  WITHDRAWN
}

model Booking {
  id               String        @id @default(cuid())
  quoteId          String?       @unique
  customerId       String
  providerId       String
  serviceId        String
  scheduledDate    DateTime
  scheduledEndDate DateTime?
  description      String        @db.Text
  location         String
  latitude         Decimal?      @db.Decimal(10, 8)
  longitude        Decimal?      @db.Decimal(11, 8)
  amount           Decimal       @db.Decimal(10, 2)
  platformFee      Decimal       @db.Decimal(10, 2)
  providerPayout   Decimal       @db.Decimal(10, 2)
  status           BookingStatus @default(PENDING)
  paymentStatus    PaymentStatus @default(PENDING)
  completedAt      DateTime?
  cancelledAt      DateTime?
  cancelReason     String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  quote    Quote?    @relation(fields: [quoteId], references: [id])
  customer User      @relation("customer", fields: [customerId], references: [id])
  provider Provider  @relation("provider", fields: [providerId], references: [id])
  service  Service   @relation(fields: [serviceId], references: [id])
  payment  Payment?
  review   Review?
  disputes Dispute[]

  @@index([customerId])
  @@index([providerId])
  @@index([status])
  @@index([scheduledDate])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  DISPUTED
}

enum PaymentStatus {
  PENDING
  AUTHORIZED
  CAPTURED
  RELEASED
  REFUNDED
  FAILED
}

// ==================== PAYMENTS ====================

model Payment {
  id                    String        @id @default(cuid())
  bookingId             String        @unique
  stripePaymentIntentId String        @unique
  amount                Decimal       @db.Decimal(10, 2)
  currency              String        @default("gbp")
  status                PaymentStatus @default(PENDING)
  stripeTransferId      String?
  transferredAt         DateTime?
  refundedAt            DateTime?
  refundAmount          Decimal?      @db.Decimal(10, 2)
  metadata              Json?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([stripePaymentIntentId])
}

model StripeEvent {
  id        String   @id @default(cuid())
  eventId   String   @unique
  type      String
  data      Json
  processed Boolean  @default(false)
  error     String?
  createdAt DateTime @default(now())

  @@index([eventId])
  @@index([processed])
}

// ==================== WALLET ====================

model BalanceTransaction {
  id              String                   @id @default(cuid())
  userId          String
  amount          Decimal                  @db.Decimal(10, 2)
  type            BalanceTransactionType
  status          BalanceTransactionStatus @default(PENDING)
  stripeSessionId String?                  @unique
  description     String?
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSessionId])
  @@index([status])
  @@index([createdAt])
}

enum BalanceTransactionType {
  DEPOSIT
  WITHDRAWAL
  PAYMENT
  REFUND
}

enum BalanceTransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

// ==================== REVIEWS ====================

model Review {
  id           String    @id @default(cuid())
  bookingId    String    @unique
  authorId     String
  reviewedId   String    // Provider's user ID
  rating       Int       // 1-5
  comment      String    @db.Text
  response     String?   @db.Text // Provider's response
  respondedAt  DateTime?
  helpfulCount Int       @default(0)
  reported     Boolean   @default(false)
  visible      Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  booking      Booking         @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  author       User            @relation("author", fields: [authorId], references: [id])
  reviewed     User            @relation("reviewed", fields: [reviewedId], references: [id])
  helpfulVotes ReviewHelpful[]

  @@index([reviewedId])
  @@index([rating])
}

model ReviewHelpful {
  id        String   @id @default(cuid())
  reviewId  String
  userId    String
  createdAt DateTime @default(now())

  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([reviewId, userId])
}

// ==================== MESSAGING ====================

model Conversation {
  id            String    @id @default(cuid())
  lastMessageAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  participants ConversationParticipant[]
  messages     Message[]

  @@index([lastMessageAt])
}

model ConversationParticipant {
  id             String    @id @default(cuid())
  conversationId String
  userId         String
  lastReadAt     DateTime?
  isArchived     Boolean   @default(false)
  createdAt      DateTime  @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId])
}

model Message {
  id             String      @id @default(cuid())
  conversationId String
  senderId       String
  content        String      @db.Text
  type           MessageType @default(TEXT)
  attachments    String[]    // Array of URLs
  readAt         DateTime?
  createdAt      DateTime    @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation("sender", fields: [senderId], references: [id])

  @@index([conversationId])
  @@index([senderId])
  @@index([createdAt])
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  QUOTE
  BOOKING_UPDATE
  SYSTEM
}

// ==================== NOTIFICATIONS ====================

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  body      String
  data      Json?
  read      Boolean          @default(false)
  readAt    DateTime?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

enum NotificationType {
  NEW_QUOTE
  QUOTE_ACCEPTED
  NEW_MESSAGE
  NEW_BOOKING
  BOOKING_CONFIRMED
  BOOKING_COMPLETED
  BOOKING_CANCELLED
  NEW_REVIEW
  PAYMENT_RECEIVED
  VERIFICATION_UPDATE
  SYSTEM
}

// ==================== DISPUTES ====================

model Dispute {
  id          String        @id @default(cuid())
  bookingId   String
  initiatorId String
  reason      String        @db.Text
  status      DisputeStatus @default(OPEN)
  resolution  String?       @db.Text
  resolvedAt  DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([status])
}

enum DisputeStatus {
  OPEN
  UNDER_REVIEW
  RESOLVED
  ESCALATED
}

// ==================== CONTENT & PROMOTIONS ====================

model Testimonial {
  id         String   @id @default(cuid())
  authorName String
  authorAvatar String?
  rating     Int      // 1-5
  comment    String   @db.Text
  service    String?  // Service name for badge
  featured   Boolean  @default(false)
  visible    Boolean  @default(true)
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  translations TestimonialTranslation[]

  @@index([featured])
  @@index([visible])
}

model TestimonialTranslation {
  id            String @id @default(cuid())
  testimonialId String
  language      String // en, tr
  comment       String @db.Text
  service       String?

  testimonial Testimonial @relation(fields: [testimonialId], references: [id], onDelete: Cascade)

  @@unique([testimonialId, language])
}

model BlogPost {
  id           String   @id @default(cuid())
  slug         String   @unique
  imageUrl     String
  readTime     Int      // minutes
  category     String   // tips, guide, news
  featured     Boolean  @default(false)
  published    Boolean  @default(false)
  publishedAt  DateTime?
  viewCount    Int      @default(0)
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  translations BlogPostTranslation[]

  @@index([slug])
  @@index([featured])
  @@index([published])
}

model BlogPostTranslation {
  id          String  @id @default(cuid())
  blogPostId  String
  language    String  // en, tr
  title       String
  excerpt     String? @db.Text
  content     String  @db.Text

  blogPost BlogPost @relation(fields: [blogPostId], references: [id], onDelete: Cascade)

  @@unique([blogPostId, language])
}

model Promotion {
  id          String    @id @default(cuid())
  code        String    @unique
  type        PromotionType
  value       Decimal   @db.Decimal(10, 2) // percentage or fixed amount
  minOrder    Decimal?  @db.Decimal(10, 2)
  maxDiscount Decimal?  @db.Decimal(10, 2) // for percentage type
  usageLimit  Int?      // total usage limit
  usageCount  Int       @default(0)
  perUserLimit Int      @default(1)
  featured    Boolean   @default(false)
  active      Boolean   @default(true)
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  translations PromotionTranslation[]

  @@index([code])
  @@index([featured])
  @@index([active])
}

enum PromotionType {
  PERCENTAGE
  FIXED_AMOUNT
}

model PromotionTranslation {
  id          String  @id @default(cuid())
  promotionId String
  language    String  // en, tr
  title       String
  description String?
  tag         String? // e.g., "LIMITED OFFER"

  promotion Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)

  @@unique([promotionId, language])
}

// Platform-wide stats cache (updated periodically)
model PlatformStats {
  id                String   @id @default(cuid())
  key               String   @unique // 'main' for singleton
  totalProviders    Int      @default(0)
  verifiedProviders Int      @default(0)
  totalJobs         Int      @default(0)
  completedJobs     Int      @default(0)
  totalReviews      Int      @default(0)
  averageRating     Decimal  @default(0) @db.Decimal(3, 2)
  totalCustomers    Int      @default(0)
  updatedAt         DateTime @updatedAt
}

// ==================== ADMIN & ANALYTICS ====================

model AdminAuditLog {
  id        String   @id @default(cuid())
  adminId   String
  action    String
  entity    String
  entityId  String
  oldData   Json?
  newData   Json?
  ipAddress String?
  createdAt DateTime @default(now())

  @@index([adminId])
  @@index([entity, entityId])
  @@index([createdAt])
}

// ==================== FAVORITES ====================

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  providerId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([userId, providerId])
  @@index([userId])
  @@index([providerId])
}

// ==================== JOB LISTINGS ====================

model Job {
  id              String        @id @default(cuid())
  employerId      String
  title           String
  description     String        @db.Text
  requirements    String?       @db.Text
  responsibilities String?      @db.Text
  location        String?
  locationType    LocationType  @default(ONSITE)
  employmentType  EmploymentType @default(FULL_TIME)
  experienceLevel ExperienceLevel @default(MID)
  salaryMin       Decimal?      @db.Decimal(10, 2)
  salaryMax       Decimal?      @db.Decimal(10, 2)
  salaryCurrency  String        @default("GBP")
  salaryPeriod    SalaryPeriod  @default(YEARLY)
  skills          String[]      // Required skills
  benefits        String[]      // Job benefits
  category        String?       // Job category
  status          JobStatus     @default(ACTIVE)
  applicationDeadline DateTime?
  viewCount       Int           @default(0)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  employer     User             @relation("EmployerJobs", fields: [employerId], references: [id], onDelete: Cascade)
  applications JobApplication[]

  @@index([employerId])
  @@index([status])
  @@index([category])
  @@index([locationType])
  @@index([employmentType])
  @@index([createdAt])
}

enum LocationType {
  ONSITE
  REMOTE
  HYBRID
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACT
  FREELANCE
  INTERNSHIP
}

enum ExperienceLevel {
  ENTRY
  MID
  SENIOR
  LEAD
  EXECUTIVE
}

enum SalaryPeriod {
  HOURLY
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

enum JobStatus {
  DRAFT
  ACTIVE
  PAUSED
  CLOSED
  FILLED
}

// ==================== CANDIDATE PROFILES ====================

model CandidateProfile {
  id              String    @id @default(cuid())
  userId          String    @unique
  headline        String?   // Professional headline
  summary         String?   @db.Text
  cvUrl           String?   // Uploaded CV file URL
  cvFileName      String?
  phone           String?
  location        String?
  linkedinUrl     String?
  portfolioUrl    String?
  availableFrom   DateTime?
  expectedSalary  Decimal?  @db.Decimal(10, 2)
  salaryCurrency  String    @default("GBP")
  salaryPeriod    SalaryPeriod @default(YEARLY)
  openToWork      Boolean   @default(true)
  openToRemote    Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  education       Education[]
  experience      WorkExperience[]
  skills          CandidateSkill[]
  certifications  Certification[]
  languages       CandidateLanguage[]
  applications    JobApplication[]
}

model Education {
  id              String    @id @default(cuid())
  candidateId     String
  institution     String
  degree          String?   // Bachelor's, Master's, PhD, etc.
  fieldOfStudy    String?
  startDate       DateTime?
  endDate         DateTime?
  current         Boolean   @default(false)
  grade           String?
  description     String?   @db.Text
  createdAt       DateTime  @default(now())

  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

model WorkExperience {
  id              String    @id @default(cuid())
  candidateId     String
  company         String
  title           String
  location        String?
  locationType    LocationType @default(ONSITE)
  startDate       DateTime
  endDate         DateTime?
  current         Boolean   @default(false)
  description     String?   @db.Text
  achievements    String[]
  createdAt       DateTime  @default(now())

  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

model CandidateSkill {
  id              String    @id @default(cuid())
  candidateId     String
  name            String
  level           SkillLevel @default(INTERMEDIATE)
  yearsOfExperience Int?
  createdAt       DateTime  @default(now())

  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@unique([candidateId, name])
  @@index([candidateId])
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

model Certification {
  id              String    @id @default(cuid())
  candidateId     String
  name            String
  issuingOrg      String
  issueDate       DateTime?
  expiryDate      DateTime?
  credentialId    String?
  credentialUrl   String?
  createdAt       DateTime  @default(now())

  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

model CandidateLanguage {
  id              String    @id @default(cuid())
  candidateId     String
  language        String
  proficiency     LanguageProficiency @default(INTERMEDIATE)
  createdAt       DateTime  @default(now())

  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@unique([candidateId, language])
  @@index([candidateId])
}

enum LanguageProficiency {
  BASIC
  INTERMEDIATE
  FLUENT
  NATIVE
}

// ==================== JOB APPLICATIONS ====================

model JobApplication {
  id              String            @id @default(cuid())
  jobId           String
  candidateId     String
  coverLetter     String?           @db.Text
  status          ApplicationStatus @default(PENDING)
  appliedAt       DateTime          @default(now())
  reviewedAt      DateTime?
  notes           String?           @db.Text  // Employer notes
  rating          Int?              // Employer rating 1-5

  job             Job              @relation(fields: [jobId], references: [id], onDelete: Cascade)
  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@unique([jobId, candidateId])
  @@index([jobId])
  @@index([candidateId])
  @@index([status])
  @@index([appliedAt])
}

enum ApplicationStatus {
  PENDING
  REVIEWING
  SHORTLISTED
  INTERVIEW
  OFFERED
  HIRED
  REJECTED
  WITHDRAWN
}
